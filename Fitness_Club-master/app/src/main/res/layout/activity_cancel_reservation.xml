<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Reservation.CancelReservation">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/fitness_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Reservation Log"
            android:layout_weight="1"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/round_corners"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_margin="10dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/ic_trophy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/membership_type"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:textSize="26dp"
                        android:textColor="#FFFF"
                        android:text="No Membership"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/starting_date"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#FFFF"
                        android:text="Start:"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                    <TextView
                        android:id="@+id/end_date"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:textSize="20dp"
                        android:textColor="#FFFF"
                        android:text="End:"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/cancel"
                    android:background="#613A61"
                    android:text="CANCEL"
                    android:textColor="#FFFF"
                    android:textSize="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>