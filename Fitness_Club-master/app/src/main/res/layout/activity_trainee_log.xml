<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <ImageView
                android:background="@mipmap/basketball"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom|center_horizontal"

                    android:layout_marginLeft="170dp"
                    android:layout_marginRight="170dp"
                    android:background="@drawable/fitness_logo"
                    android:contentDescription="logo image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="Arial"
                    android:text="WELCOME TO PORTAL"
                    android:textColor="#ffff"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <ImageView
                android:background="@drawable/background1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageView>

            <LinearLayout
                android:weightSum="14"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/make_reservation"
                    android:layout_weight="2"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:text="Make Reservation"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:id="@+id/cancel_reservation"
                    android:layout_weight="2"
                    android:textColor="#ffff"
                    android:textAllCaps="false"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Cancel Reservation"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:id="@+id/book_trainer"
                    android:textColor="#ffff"
                    android:layout_weight="2"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Book Trainer"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:id="@+id/view_session"
                    android:layout_weight="2"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Attended Sessions"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:id="@+id/view_schedule"
                    android:layout_weight="2"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="View Schedule"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>
                <Button
                    android:id="@+id/give_feedback"
                    android:layout_weight="2"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Give Feedback"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

                <Button
                    android:id="@+id/sign_out"
                    android:layout_weight="2"
                    android:textColor="#ffff"
                    android:textAllCaps="false"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Sign Out"
                    android:layout_marginBottom="10dp"
                    android:background="#A9A9A9"
                    android:alpha="0.85"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>




            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>